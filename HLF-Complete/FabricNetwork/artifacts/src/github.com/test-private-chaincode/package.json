{
  "name": "test-public-cc",
  "version": "1.0.0",
  "description": "testPrivateCC - public contract implemented in JavaScript",
  "main": "index.js",
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "scripts": {
    "lint": "eslint *.js */**.js",
    "pretest": "npm run lint",
    "test": "nyc mocha --recursive",
    "start": "fabric-chaincode-node start"
  },
  "engineStrict": true,
  "author": "Hyperledger",
  "license": "Apache-2.0",
  "dependencies": {
    "fabric-contract-api": "^2.5.0",
    "fabric-shim": "^2.5.0",
    "json-stringify-deterministic": "^1.0.2",
    "sort-keys-recursive": "^2.1.0"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "eslint": "^9.4.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "test/**",
      "index.js",
      ".eslintrc.js"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
